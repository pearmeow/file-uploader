<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
        <h1><%= title %></h1>
        <%- include("./partials/errors") %>
        <% if (locals.currentUser && locals.folder !== null) { %>
            <p>Folder: <%= locals.folder.name %></p>
            <p>Subfolders</p>
            <ul>
                <% folder.subfolders.forEach((elem) => { %>
                    <li>
                        <a href="/folder/<%=elem.id%>"><%= elem.name %></a>
                        <form action="/folder/rename" method="POST">
                            <input type="hidden" name="id" value="<%= elem.id %>">
                            <label for="name">Change name</label>
                            <input id="name" type="text" name="name">
                            <button type="submit">Submit</button>
                        </form>
                        <form action="/folder/delete" method="POST">
                            <button type="submit" name="id" value="<%= elem.id %>">Delete</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
            <p>Files</p>
            <ul>
                <% folder.files.forEach((elem) => { %>
                    <li><%= elem.name %></li>
                    <form action="/folder/file/delete" method="POST">
                        <input type="hidden" name="id" value="<%= elem.id %>">
                        <button type="submit">Delete</button>
                    </form>
                <% }) %>
            </ul>
            <form action="/folder/file" method="POST" enctype="multipart/form-data">
                <p>Upload new file</p>
                <input type="hidden" name="parentId" value="<%= folder.id %>">
                <label for="name">Name (Optional)</label>
                <input id="name" type="text" name="name">
                <label for="somefile">New file</label>
                <input id="somefile" type="file" name="somefile">
                <button type="submit">Submit</button>
            </form>
            <form action="/folder" method="POST">
                <p>Create new folder</p>
                <input type="hidden" name="parentId" value="<%= folder.id %>">
                <label for="name">Name</label>
                <input id="name" type="text" name="name">
                <button type="submit">Submit</button>
            </form>
        <% } %>
        <% if (locals.currentUser && locals.folder !== null) { %>
            <% if (locals.folder.parentId) { %>
                <a href="/folder/<%=locals.folder.parentId%>">Back one level</a>
            <% } %>
        <% } %>
        <a href="/">Back to home</a>
</body>
</html>
